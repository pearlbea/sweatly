<% provide(:title, @user.name) %>
<div class="row">
  <aside>
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
  <% if @user.microposts.any? %>
    <%= render 'follow_form' if logged_in? %>

    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
